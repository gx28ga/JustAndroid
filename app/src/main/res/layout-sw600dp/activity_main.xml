<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent">
  
  <fragment
    
    android:name="com.axun.justandroid.NewsListFragment"
    android:layout_weight="1"
    android:id="@+id/frag_news_list"
    android:layout_width="0dp"
    android:layout_height="match_parent"/>
    <LinearLayout
    android:layout_weight="3"
    android:layout_width="0dp"
    android:id="@+id/layout_news_detail"
    android:background="#60f3f2"
    android:layout_height="match_parent">
    <fragment
      android:name="com.axun.justandroid.NewsDetailFragment"
      android:layout_height="match_parent"
      android:layout_width="match_parent"
      android:id="@+id/frag_news_detail"/>
    
  </LinearLayout>
  
</LinearLayout>